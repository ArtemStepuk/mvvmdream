target 'iosApp' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for iosApp

  target 'iosAppTests' do
    inherit! :search_paths

    pod 'FBSnapshotTestCase'

    # Pods for testing
  end

  target 'iosAppUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end

